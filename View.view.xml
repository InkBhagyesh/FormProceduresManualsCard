<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    controllerName="com.winslow.FormsProceduresCard.Card"
    width="100%" busyIndicatorDelay="0">
  
  <VBox class="sapUiMediumMargin">

    <!-- ðŸ” Search and Popular Searches -->
    <HBox alignItems="Center" wrap="Wrap" class="sapUiSmallMarginBottom">
      <SearchField 
        width="200px"
        placeholder="Forms, Procedures and manuals" 
        search="onSearch"
        class="sapUiTinyMarginEnd" />

      <Title text="POPULAR SEARCHES" level="H5" class="sapUiTinyMarginTop sapUiMediumMarginBegin sapUiMediumMarginEnd" />

      <Button text="PERMIT TO WORK" type="Default" class="sapUiTinyMarginEnd" press="onImagePress"/>
      <Button text="CONFINED SPACE" type="Default" class="sapUiTinyMarginEnd" press="onImagePress"/>
      <Button text="SWMS" type="Default" class="sapUiTinyMarginEnd" press="onImagePress"/>
      <Button text="SEWER TECH" type="Default" class="sapUiTinyMarginEnd" press="onImagePress"/>
      <!-- <HBox visible="{= ${TopTabsModel>/}.length > 0 ? true : false }" items="{TopTabsModel>/}">
        <items>
          <Button 
            text="{TopTabsModel>title}" 
            type="Default" 
            class="sapUiTinyMarginEnd" 
            press=".onPopularTabPress" />
        </items>
      </HBox> -->
    </HBox>
    
    <Toolbar design="Transparent"></Toolbar>
   
    <layout:Grid defaultSpan="L4 M6 S12" hSpacing="2" vSpacing="2">

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_1}" alt="Confied Space" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Confined Space" press="onImagePress" wrapping="true" class="customLink" />
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_2}" alt="Permit to Work" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Permit to Work" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_3}" alt="Sewer Tech" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Sewer Tech" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_4}" alt="Water Tech" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Water Tech"  wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_5}" alt="Mobile Plant" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Mobile Plant" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_6}" alt="Excavation &amp; Trenching" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Excavation &amp; Trenching" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_7}" alt="Cranes &amp; Lifting" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Cranes &amp; Lifting" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_8}" alt="SWMS" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="SWMS" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>

      <FlexBox direction="Row" alignItems="Center" class="sapUiSmallMargin">
        <Image press="onImagePress" src="{images>/Image_9}" alt="Product Handling" width="60px" height="60px" class="sapUiTinyMarginEnd"/>
        <Link text="Product Handling" press="onImagePress" wrapping="true" class="customLink"/>
      </FlexBox>
    </layout:Grid>
  </VBox>
</mvc:View>
